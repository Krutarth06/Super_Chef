<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/intro_slider_three_image"
        android:scaleType="fitXY"
        android:src="@mipmap/introslider_three" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="120dp"
        android:text="@string/well_you_ve_reached_the_right_place_key_in_the_ingredients_with_which_you_want_to_cook_and_explore_innumerable_number_of_recipes"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>